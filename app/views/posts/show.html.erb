<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<h2>Comments:</h2>
<% @post.comments.each do |comment| %>
    <p>
        <%= comment.body %>
    </p>
<% end %>
<h2>Add a comment:</h2>
<%= form_for([@post,@post.comments.build]) do |f| %>
 <p>
     <%= f.text_area :body %>
 </p>
 <p><%= f.submit %></p>
 <% end %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
